global
    log               <%= scope['::oaeservice::haproxy::syslog_ip'] %> local0
    log-send-hostname <%= scope['::clientcert'] %>

defaults
    log     global
    mode    tcp
    timeout client 1h
    timeout server 1h
    timeout connect 5s

listen redis_app :<%= scope['::oaeservice::haproxy::cache_port'] %>
    option tcplog
    option logasap
    server <%= scope['::oaeservice::haproxy::cache_primary'] %>    <%= scope['::oaeservice::haproxy::cache_primary'] %>:6379    check inter 1000 downinter 365d
<% if scope['::oaeservice::haproxy::cache_backups'] -%>
<% scope['::oaeservice::haproxy::cache_backups'].each do |cache_backup| -%>
    server <%= cache_backup %>    <%= cache_backup %>:6379    check inter 1000 downinter 365d backup
<% end -%>
<% end -%>

<% if scope['::oaeservice::haproxy::activity_cache_enabled'] -%>
listen redis_activity :<%= scope['::oaeservice::haproxy::activity_cache_port'] %>
    option tcplog
    option logasap
    server <%= scope['::oaeservice::haproxy::activity_cache_primary'] %>    <%= scope['::oaeservice::haproxy::activity_cache_primary'] %>:6379    check inter 1000 downinter 365d
<% if scope['::oaeservice::haproxy::activity_cache_backups'] -%>
<% scope['::oaeservice::haproxy::activity_cache_backups'].each do |activity_cache_backup| -%>
    server <%= activity_cache_backup %>    <%= activity_cache_backup %>:6379    check inter 1000 downinter 365d backup
<% end -%>
<% end -%>
<% end -%>

listen stats :80
    mode http
    stats enable
    stats scope redis_app
    <% if scope['::oaeservice::haproxy::activity_cache_enabled'] -%>stats scope redis_activity<% end -%>
    stats realm HAProxy\ Statistics
    stats uri /
    stats auth haproxy:haproxy
